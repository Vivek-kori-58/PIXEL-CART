<% if(typeof errors != undefined && errors && errors.length > 0) {%>

<div
  className="bg-red-400 border border-red-400 px-4 py-3 rounded relative text-red-700"
>
  <strong className="font-bold">Errors !!</strong>
  <span className="block sm:inline">
    <% errors.forEach(err =>{ %>
    <li><%= err %></li>
    <% }) %>
  </span>
</div>
<% } %>
